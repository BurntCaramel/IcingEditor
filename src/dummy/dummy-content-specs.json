{
	"icingStandard": {"id": "burnticing", "version": "0.1.0"},
	"specsIdentifier": {"id": "burntcaramel", "version": "1.0.0"},
	"defaultSubsectionType": "normal",
	"subsectionTypes": [
		{
			"id": "normal",
			"title": "Normal"
		},
		{
			"id": "unorderedList",
			"title": "Unordered List",
			"outerHTMLTagName": "ul",
			"childHTMLRepresentation": [
				{
					"tagName": "li",
					"children": [
						{
							"placeOriginalElement": true
						}
					]
				}
			],
			"blockHTMLOptions": {
				"noParagraphs": true
			}
		},
		{
			"id": "orderedList",
			"title": "Ordered List",
			"outerHTMLTagName": "ol",
			"childHTMLRepresentation": [
				{
					"tagName": "li",
					"children": [
						{
							"placeOriginalElement": true
						}
					]
				}
			],
			"blockHTMLOptions": {
				"noParagraphs": true
			}
		},
		{
			"id": "quote",
			"title": "Quote",
			"outerHTMLTagName": "blockquote"
		}
	],
	"blockTypesByGroup": {
		"text": [
			{"id": "body", "title": "Paragraph", "outerHTMLTagName": "p"},
			{"id": "heading", "title": "Heading 1", "outerHTMLTagName": "h1"},
			{"id": "subhead1", "title": "Heading 2", "outerHTMLTagName": "h2"},
			{"id": "subhead2", "title": "Heading 3", "outerHTMLTagName": "h3"},
			{"id": "subhead3", "title": "Heading 4", "outerHTMLTagName": "h4"}
		],
		"media": [
			{
				"id": "externalImage",
				"title": "External Image",
				"fields": [
					{
						"id": "url",
						"type": "url",
						"title": "Image URL",
						"placeholder": "Enter the URL to an image – JPEG, PNG, SVG, etc.",
						"required": true
					},
					{
						"id": "width",
						"type": "number-integer",
						"title": "Displayed Width",
						"placeholder": "Automatic"
					},
					{
						"id": "height",
						"type": "number-integer",
						"title": "Displayed Height",
						"placeholder": "Automatic"
					},
					{
						"id": "description",
						"type": "group",
						"fields": [
							{
								"id": "descriptionText",
								"type": "text",
								"title": "Description",
								"placeholder": "None",
								"recommended": true
							},
							{
								"id": "showDescriptionChoice",
								"title": "Description Visibility",
								"type": "choice",
								"choices": [
									{
										"id": "accessible",
										"title": "Use For Accessibility Only"
									},
									{
										"id": "visible",
										"title": "Show Description"
									}
								]
							}
						]
					}
				],
				"outerHTMLTagName": "figure",
				"innerHTMLRepresentation": [
					{
						"tagName": "img",
						"attributes": {
							"src": ["fields", "url"],
							"width": ["fields", "width"],
							"height": ["fields", "height"],
							"alt": {
								"checkIsPresent": ["fields", "description", "showDescriptionChoice", "accessible"],
								"text": ["fields", "description", "descriptionText"]
							}
						}
					},
					{
						"checkIsFilled": ["fields", "description", "descriptionText"],
						"checkIsPresent": ["fields", "description", "showDescriptionChoice", "visible"],
						"tagName": "figcaption",
						"children": [
							{
								"text": ["fields", "description", "descriptionText"]
							}
						]
					}
				]
			}
		],
		"particular_OFF": [
			{
				"id": "contactDetails",
				"title": "Contact Details",
				"fieldsAreRequired": false,
				"fields": [
					{"id": "businessName", "title": "Business Name"},
					{"id": "streetAddress", "title": "Street Address"},
					{"id": "locality", "title": "Locality"},
					{"id": "region", "title": "Region"},
					{"id": "postalCode", "title": "Postal Code"},
					{"id": "country", "title": "Country"}
				],
				"innerHTMLRepresentation": [
					{
						"tagName": "div",
						"attributes": {
							"itemScope": true,
							"itemType": "http://schema.org/Organization"
						},
						"children": [
							{
								"tagName": "section",
								"attributes": {
									"itemProp": "name"
								},
								"children": [
									{
										"text": ["fields", "businessName"]
									}
								]
							},
							{
								"tagName": "article",
								"attributes": {
									"itemProp": "address",
									"itemScope": true,
									"itemType": "http://schema.org/PostalAddress"
								},
								"children": [
									{
										"tagName": "div",
										"children": [
											{
												"text": ["fields", "streetAddress"]
											},
											{
												"checkIsPresent": ["fields", "streetAddress"],
												"text": ", "
											},
											{
												"text": ["fields", "locality"]
											},
											{
												"lineBreak": true
											},
											{
												"text": ["fields", "region"]
											},
											{
												"text": ["fields", "postalCode"]
											},
											{
												"text": ["fields", "country"]
											}
										]
									}
								]
							}
						]
					}
				],
				"onlineHTMLRepresentationCreator": {
					"POST": "contactDetails/1.0/",
					"JavaScript": "http://representations.burnticing.org/blocks/contactDetails/1.0/contactDetails.1.0.js"
				}
			},
			{
				"id": "blikPlaceholder",
				"title": "Blik Placeholder",
				"choices": [
					{
						"id": "header",
						"title": "Blik Header",
						"description": "The Blik logo"
					},
					{
						"id": "mac-app-store-link",
						"title": "Blik Mac App Store Link",
						"description": "The official-style black button linking to the Mac App Store."
					}
				]
			},
			{
				"id": "featureHeading",
				"title": "Feature Heading",
				"fieldsAreRequired": true,
				"fields": [
					{"id": "secondaryText", "title": "Secondary Text"},
					{"id": "primaryText", "title": "Primary Text"}
				],
				"outerHTMLTagName": "h3",
				"innerHTMLRepresentation": [
					{
						"tagName": "span",
						"attributes": {
							"className": "secondary"
						},
						"children": [
							{
								"text": ["fields", "secondaryText"]
							}
						]
					},
					{
						"tagName": "span",
						"attributes": {
							"className": "primary"
						},
						"children": [
							{
								"text": ["fields", "primaryText"]
							}
						]
					}
				]
			}
		]
	},
	"traitTypes": [
		{
			"id": "bold",
			"title": "Bold",
			"allowedForAnyTextItems": true,
			"innerHTMLRepresentation": [
				{
					"tagName": "strong",
					"children": [
						{
							"placeOriginalElement": true
						}
					]
				}
			]
		},
		{
			"id": "italic",
			"title": "Italic",
			"allowedForAnyTextItems": true,
			"innerHTMLRepresentation": [
				{
					"tagName": "em",
					"children": [
						{
							"placeOriginalElement": true
						}
					]
				}
			]
		},
		{
			"id": "link",
			"allowedForAnyTextItems": true,
			"allowedForBlockTypesByGroupType": {
				"text": true,
				"media": true,
				"particular": true
			},
			"disabled": false,
			"title": "Link",
			"type": "fields",
			"fields": [
				{
					"id": "typeChoice",
					"title": "Link To",
					"type": "choice",
					"choices": [
						{
							"id": "URL",
							"title": "URL",
							"fields": [
								{
									"type": "url",
									"id": "URL",
									"title": "URL",
									"placeholder": "Enter the URL to link to"
								}
							]
						},
						{
							"id": "email",
							"title": "Email",
							"fields": [
								{
									"type": "email",
									"id": "emailAddress",
									"title": "Email Address",
									"placeholder": "Enter the email address to link to"
								}
							]
						}
					]
				}
			],
			"innerHTMLRepresentation": [
				{
					"tagName": "a",
					"attributes": {
						"href": {
							"firstWhichIsPresent": [
								["fields", "typeChoice", "URL", "URL"],
								{
									"join": [
										"mailto:",
										["fields", "typeChoice", "email", "emailAddress"]
									]
								}
							]
						}
					},
					"children": [
						{
							"placeOriginalElement": true
						}
					]
				}
			],
			"valueDescription": [
				{
					"checkIsPresent": ["fields", "typeChoice", "URL"],
					"join": [
						"Link to URL: ",
						["fields", "typeChoice", "URL", "URL"]
					]
				},
				{
					"checkFieldPresent": ["typeChoice", "email"],
					"join": [
						"Link to email address: ",
						["fields", "typeChoice", "email", "emailAddress"]
					]
				}
			]
		},
		{
			"id": "lineBreakAfter",
			"title": "Line Break After",
			"allowedForAnyTextItems": true,
			"afterHTMLRepresentation": [
				{
					"tagName": "br"
				}
			]
		},
		{
			"id": "class",
			"disabled": true,
			"title": "Class",
			"allowedForAnyTextItems": true,
			"allowedForBlockTypesByGroupType": true,
			"type": "fields",
			"fields": [
				{
					"id": "classNames",
					"title": "Class Names",
					"type": "text"
				}
			]
		},
		{
			"id": "primary",
			"disabled": true,
			"title": "Primary"
		},
		{
			"id": "secondary",
			"disabled": true,
			"title": "Secondary"
		},
		{
			"id": "hide",
			"title": "Don’t Show",
			"allowedForAnyTextItems": true,
			"allowedForBlockTypesByGroupType": true,
			"innerHTMLRepresentation": null
		}
	]
}